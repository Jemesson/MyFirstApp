<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="title_style">@style/TextStyle</item>
    </style>

    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">#ff0000</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>

    <style name="ActionBarText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Thumbnail">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
